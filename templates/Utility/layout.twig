
{% set dictionary = dictionary() %}

<!DOCTYPE html>
    <html lang="fr-FR">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}OpenDashboard Advanced{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/library/semantic/semantic.min.css') }}">
            <link href="https://fonts.googleapis.com/css?family=Sofia" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% endblock %}
        <script src="{{ asset('js/library/jquery.min.js') }}"></script>
    </head>

     <body>
        {% block navbar %}
            {% include 'Utility/header.twig' %}
        {% endblock %}

        <div class="pusher site" >
            <main class="site-content">
                {% block flash %}
                    {% include 'Utility/flash.twig' %}
                {% endblock %}
                {% block body %}{% endblock %}
            </main>

            <!--{% block footer %}
                {% include 'Utility/footer.twig' %}
            {% endblock %}-->
        </div>

        {% block javascripts %}
            <script src="{{ asset('js/library/semantic.min.js') }}"></script>
            <script src="{{ asset('js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>

/**
 * Get the scores for an objective given
 *
 * @param weekScores
 * @param target
 * @returns {Array}
 */
getScoreForObjective = (weekScores, target) => {
    let scores = [];

    $.each(weekScores, function(key, value ) {
        if (value === null) {
            scores.push(0);
        } else {
            scores.push(value[target])
        }
    });

    return scores;
};


/**
 * Update the data of the progress chart
 *
 * @param chart
 * @param scores
 * */
updateEvolutionChart = (chart, userScores, classScores) => {
    chart.data.datasets[0].data = userScores;
    chart.data.datasets[1].data = classScores;
    chart.update();
};


toggleAverageClassChart = (chart) => {
    chart.data.datasets[1].hidden = !chart.data.datasets[1].hidden;
    chart.update();
};


/**
 * Create the progression chart
 *
 * @param domId
 * @param scores
 * @param labels
 * @returns {Chart}
 */
evolutionChart = (domId, scores, labels, classScores) => {
    return new Chart(domId, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: '{{ i18n.legend.my_score }}',
                borderColor: '#039be5',
                yAxisID: 'user',
                data: scores,
                fill: false
            },
            {
                label: 'class average',
                borderColor: '#e57f34',
                yAxisID: 'class',
                data: classScores,
                fill: true,
                backgroundColor: 'rgba(229, 167, 94, 0.2)',
                hidden: true
            }]
        },
        options: {
            legend: {
                display: false
            },
            elements: {
                line: {
                    tension: 0
                }
            },
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                yAxes: [{
                    position: "left",
                    id: "user",
                    display: true,
                    ticks: {
                        max: 100,
                        beginAtZero: true,
                        callback: function(value, index, values) {
                            return value + '%';
                        }
                    }
                },
                 {
                     id: "class",
                     display: false,
                     ticks: {
                         max: 100,
                         beginAtZero: true,
                         callback: function(value, index, values) {
                             return value + '%';
                         }
                     }
                 }
                ]
            },
            tooltips: {
                callbacks: {
                    label: function(tooltipItem, data) {
                        let dataset = data.datasets[tooltipItem.datasetIndex];
                        let currentValue = dataset.data[tooltipItem.index];
                        return ' ' + currentValue + '%';
                    },
                    title: function(tooltipItem, data) {
                        return data.labels[tooltipItem[0].index];
                    }
                }
            },
        }
    });
}
</script>

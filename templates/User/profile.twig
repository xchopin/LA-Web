{% extends 'Utility/layout.twig' %}

{% block body %}

{% set i18n = dictionary.profile %}

<div class="ui grid">
    <div class="one wide column"></div>
    <div class="three wide column tablet or lower hidden">
        <h1 class="text-center"> <i class="huge circle user icon"></i> </h1>
        <hr>
        <div class="ui list">
            <div class="item">
                <i class="mail outline icon"></i>
                <div class="content"> {{ auth().email }} </div>
            </div>
        </div>
    </div>
    <div class="ten wide computer column fourteen wide tablet column">
        <div class="profile-header">
             <span class="profile-name">{{ auth().name }}</span>
        </div>

        <div class="ui pointing secondary menu">
           <!-- <a class="item " id='summary' data-tab="first">{{ i18n.overview_tab.name }}</a> -->
            <a class="item active" id='courses-tab' data-tab="second">{{ i18n.enrollments_tab.name }}</a>
            <a class="item" id='settings' data-tab="third">{{ i18n.settings_tab.name }}</a>
        </div>

        <!--<div class="ui active tab" data-tab="first"></div> -->
        <div id='my-classes' class="ui active tab" data-tab="second">
            {% include 'User/Profile/enrollments_tab.twig'  %}
        </div>
        <div id='my-settings' class="ui tab" data-tab="third">
            {% include 'User/Profile/settings_tab.twig'  %}
        </div>
    </div>
    <div class="one wide column"></div>
</div>

        <script>
            function toggleMore() {
                $('#see-more').toggle();
                $('#hide-more').toggle();
                $('#more-events').transition({
                   animation  : 'fade up',
                   duration   : '0.7s',
                   onComplete : function() {}
                });
            }

            $(function () {
                $('.menu .item').tab({context: $('#summary')});
                $('#see-more').on('click', () => { toggleMore(); });
                $('#hide-more').on('click', () => { toggleMore(); });

            });

        </script>

{% endblock %}
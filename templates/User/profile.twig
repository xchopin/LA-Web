{% extends 'Utility/layout.twig' %}

{% block body %}



<div class="ui grid">
    <div class="one wide column"></div>
    <div class="three wide column ">
        <h1 class="text-center"> <i class="huge circle user icon"></i> </h1>
        <hr>
        <div class="ui list">
            <div class="item">
                <i class="mail outline icon"></i>
                <div class="content">
                    <b>Adresse email:</b> john@doe.com
                </div>
            </div>


        </div>
    </div>
    <div class="ten wide column">
        <div class="profile-header">
             <span class="profile-name">{{ givenName }}</span>
             <span class="profile-city">
                 <i id='city-marker' class="large marker icon"></i><span id="city">Univ</span>
             </span>
        </div>

        <div class="ui pointing secondary menu">
            <a class="item active" id='summary' data-tab="first">Résumé</a>
            <a class="item" data-tab="second">Mes derniers évenements</a>
            <a class="item" id='courses-tab' data-tab="third">Mes cours</a>
        </div>
        <div class="ui active tab" data-tab="first">
            <canvas id="chartPeriod" width="auto" height="100"></canvas>
        </div>
        <div class="ui tab" data-tab="second" style="overflow-x:visible">
            <canvas id="myChart" width="auto"></canvas>
        </div>
        <div id='my-classes' class="ui tab" data-tab="third">
            <div id='enrollments' class="ui list"></div>
        </div>

    </div>
    <div class="one wide column"></div>
</div>


    <script>
        let activities =  {{ event_activities | raw}}

        $(function () {
            $('.menu .item').tab({ context: $('#summary')})
            Chart.defaults.global.defaultFontFamily = "Lato"
            Chart.defaults.global.defaultFontSize = 18
            var ctx = document.getElementById("myChart").getContext('2d')
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: Object.keys(activities),
                    datasets: [{
                        label: 'Nombre de connexions',
                        data: Object.values(activities),
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255,99,132,1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                            callback: function (value) { if (Number.isInteger(value)) { return value; } }
                        }
                    }]
                }
            })

            chartForPeriod()



        })

        function chartForPeriod() {
            var ctx = document.getElementById("chartPeriod").getContext('2d')
            Chart.defaults.global.legend.labels.usePointStyle = true;
            const defaultGenerateLabels = Chart.defaults.polarArea.legend.labels.generateLabels;


            var yourImage = new Image();
            yourImage.src ='http://style.anu.edu.au/_anu/4/images/buttons/arrow-down-black.png';
            var xLabels = {
                0 : 'Lundi',
                1 : 'Mardi',
                2 : 'Mecredi',
                3 : 'Jeudi',
                4 : 'Vendredi',
                5 : 'Samedi',
                6 : 'Dimanche'
            }

            var yLabels = {
                0 : 'Zimbra',
                1 : 'Indkøb',
                2 : 'Tøj på',
                3 : 'Spise',
                4 : 'Trapper',
                5 : 'Bad',
                6 : 'Hygiejne',
                7 : 'Toiletbesøg',
                8 : 'På toilet',
                9 : 'Op ad send'
            }

            var myChart = new Chart(ctx, {
                type: 'bubble',
                data: {
                    datasets: [{
                        label: 'Connexions',
                        data: [{x:0, y:0, r:6},
                            {x:1, y:0, r:2},
                            {x:2, y:0, r:5},
                            {x:3, y:0, r:10},
                            {x:4, y:0, r:8},
                            {x:5, y:0, r:15},
                            {x:6, y:0, r:10}],
                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                        borderColor: 'rgba(255,99,132,1)',
                        borderWidth: 2

                    }]
                },
                options: {
                    legend:{
                        display: true,
                        position: 'bottom'
                    },

                    tooltips:{enabled:false},
                    // legend: {
                    //    display: true,
                    //    position: 'bottom'
                    // },
                    scales: {
                        xAxes: [{
                            position: 'top' ,
                            ticks: {
                                min: -0.5,
                                beginAtZero: true,
                                callback: function(value, index, values) {
                                    return xLabels[value];
                                },
                                padding: 30
                            },
                            gridLines : {
                                display : false
                            }
                        }],
                        yAxes: [{
                            gridLines : {
                                drawBorder : false
                            },
                            ticks: {
                                min: -0.5,
                                fontStyle:'bold',
                                padding:10,
                                beginAtZero: true,
                                callback: function(value, index, values) {
                                    return yLabels[value];
                                }
                            },
                        }],
                    }
                }
            });

        }

        $(function () {
            $('#courses-tab').on('click', function(e) {
                    $('#my-classes').addClass('loading');
                    //$('#results').empty();
                    $.ajax({
                        url: "{{ path('enrollments') }}",
                        type: 'GET',
                        success: function (response) {
                            $('#my-classes').removeClass('loading');
                            $.each(response, function (k, v) {
                                var url = '{{ path('class', {'id': 'classId'}) }}';
                                url = url.replace("classId", v.class.sourcedId);
                                $('#enrollments').append(
                                    $('<a>').addClass('item').prop('href', url).append(
                                        $('<i>').addClass('folder outline icon'),
                                        $('<div>').addClass('content').append(
                                            $('<div>').addClass('header').text(v.title)
                                        )
                                )).transition('fade in');
                            });
                        },
                        fail: function (response) {
                            console.log('AJAX Call error')
                        }
                    })
            })

        });





    </script>
{% endblock %}
{% extends 'Utility/layout.twig' %}
{% set icons = {'Viewed' : 'eye'} %}

{% block body %}

<div class="ui grid">
    <div class="one wide column"></div>
    <div class="three wide column ">
        <h1 class="text-center"> <i class="huge folder open outline icon"></i> </h1>
        <hr>
        <div class="ui list">
            <div class="item">
                <i class="file outline icon"></i>
                <div class="content">
                    <i>{{ class.metadata.summary|striptags }}</i>
                </div>
            </div>
            <div class="item">
                <i class="linkify icon"></i>
                <div class="content">
                     <b>Lien vers le cours</b>
                </div>
            </div>
        </div>
    </div>
    <div class="ten wide column">
        <div class="profile-header">
            <span class="profile-name">Mes événements sur "{{ class.title }}"</span>
        </div>
        <div class="ui pointing secondary menu">
            <a style="width:50%; text-align:center;" class="item active" id='summary' data-tab="first">Mes dernières actions</a>
            <a style="width:50%; text-align:center;" class="item" data-tab="second">Mes notes</a>
        </div>
        <div class="ui active tab" data-tab="first">
            <ul class="cbp_tmtimeline">
                {% for event in events %}
                    <li>
                        <p class="cbp_tmtime"><span>{{ event.eventTime|date("m/d/Y") }}</span> <span>{{ event.eventTime|date("H:i") }}</span></p>
                        <div class="cbp_tmicon"> <i class="eye icon"></i></div>
                        <div class="cbp_tmlabel">
                            {% if event.action == 'Viewed' %}
                                <h2>Ouverture d'une ressource</h2>
                            {% else %}
                                <h2>{{ event.action }}</h2>
                            {% endif %}
                            <p>{{ event.object.name }}</p>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="ui tab" data-tab="second" style="overflow-x:visible">
            <canvas id="myChart" width="auto"></canvas>
        </div>
        <div id='my-classes' class="ui tab" data-tab="third">
            <div id='enrollments' class="ui list"></div>
        </div>

    </div>
    <div class="one wide column"></div>
</div>

{% endblock %}
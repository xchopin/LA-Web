{% extends 'layout.twig' %}

{% block body %}


<div class="ui grid">
    <div class="one wide column"></div>
    <div class="three wide column ">
        <h1 class="text-center"> <i class="huge circle user icon"></i> </h1>
        <hr>
        <div class="ui list">
            <div class="item">
                <i class="intergender icon"></i>
                <div class="content">
                     <b>Genre:</b> Masculin
                </div>
            </div>
            <div class="item">
                <i class="birthday icon"></i>
                <div class="content">
                    <b>Date de Naissance:</b> 01/01/1970
                </div>
            </div>
            <div class="item">
                <i class="mail outline icon"></i>
                <div class="content">
                    <b>Adresse email:</b> john@doe.com
                </div>
            </div>
            <div class="item">
                <i class="money icon"></i>
                <div class="content">
                    <b>Boursier:</b> Non
                </div>
            </div>
            <div class="item">
                <i class="travel icon"></i>
                <div class="content">
                    <b>Salarié:</b> Non
                </div>
            </div>
            <div class="item">
                <i class="child icon"></i>
                <div class="content">
                    <b>Enfants:</b> Non
                </div>
            </div>
            <div class="item">
                <i class="handicap icon"></i>
                <div class="content">
                    <b>Handicap:</b> Non
                </div>
            </div>

        </div>
    </div>
    <div class="ten wide column">
        <div class="profile-header">
             <span class="profile-name">{{ student_name }}</span>
             <span class="profile-city">
                 <i id='city-marker' class="large marker icon"></i><span id="city">IUT Nancy Charlemagne</span>
             </span>
        </div>

        <div class="ui pointing secondary menu">
            <a class="item active" id='summary' data-tab="first">Résumé</a>
            <a class="item" data-tab="second">Evenements</a>
            <a class="item" data-tab="third">Cours</a>
        </div>
        <div class="ui active tab" data-tab="first">
            <canvas id="myChart" width="auto" height="100"></canvas>
        </div>
        <div class="ui tab" data-tab="second">
            Aucun évenement
        </div>
        <div class="ui tab" data-tab="third">
            <div class="ui cards">
                {% for class in classes %}
                    <div class="card">
                        <div class="content">
                            <div class="header">{{ class.title }}</div>
                            <div class="description">Id: {{ class.sourcedId }}</div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>
    <div class="one wide column"></div>
</div>


    <script>
        $(function () {
            $('.menu .item').tab({ context: $('#summary')})
            var ctx = document.getElementById("myChart").getContext('2d')
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ["Arch", "ENT", "Zimbra", "Eduroam", "B'ul", "Agatte"],
                    datasets: [{
                        label: 'Nombre de connections',
                        data: [12, 19, 3, 5, 2, 3],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255,99,132,1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            })
        })
    </script>
{% endblock %}